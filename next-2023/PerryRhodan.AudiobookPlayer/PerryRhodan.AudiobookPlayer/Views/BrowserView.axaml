<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:PerryRhodan.AudiobookPlayer.Views"
             xmlns:vm="clr-namespace:PerryRhodan.AudiobookPlayer.ViewModels"
             xmlns:avalonia="clr-namespace:Material.Icons.Avalonia;assembly=Material.Icons.Avalonia"
             xmlns:controls="clr-namespace:Material.Styles.Controls;assembly=Material.Styles"
             mc:Ignorable="d" d:DesignWidth="520" d:DesignHeight="800"
             x:Class="PerryRhodan.AudiobookPlayer.Views.BrowserView"
             Background="Black"
             Design.DataContext="{Binding Source={x:Static vm:BrowserViewModel.DesignVM}}"
             x:DataType="vm:BrowserViewModel">
    <Grid RowDefinitions="Auto,Auto,Auto,*">
        <Button Grid.Row="0" Theme="{StaticResource MaterialFlatButton}" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal">
                <avalonia:MaterialIcon Kind="ArrowLeftCircle" Width="24" Height="24" Margin="0,0,10,0" />
                <TextBlock FontSize="24">Browser</TextBlock>
            </StackPanel>
        </Button>

        <!-- Update -->
        <Grid Grid.Row="1" Margin="5,5,5,25">
            <!-- Search Bar -->
            <TextBox Watermark="Suche" Margin="30,0,30,0" Text="{Binding SearchText, Mode=OneWayToSource}">
                <TextBox.InnerRightContent>
                    <Border Height="{Binding $parent[TextBox].Height}" Width="{Binding $self.Bounds.Height}">
                        <avalonia:MaterialIcon HorizontalAlignment="Center" VerticalAlignment="Center" Kind="Magnify" Width="20" Height="20" />
                    </Border>
                </TextBox.InnerRightContent>
            </TextBox>
            
        </Grid>
        <!-- Audio Books -->
        <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Hidden" IsVisible="{Binding HasAudioBooks}">
            <ItemsControl Grid.Row="1" ItemsSource="{Binding AudioBooks}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <views:AudioBookItemView DataContext="{Binding .}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.Template>
                    <ControlTemplate>
                        <ItemsPresenter Margin="0,0,0,100" />
                    </ControlTemplate>
                </ItemsControl.Template>
            </ItemsControl>
        </ScrollViewer>

        <TextBlock Grid.Row="2"
                   HorizontalAlignment="Center"
                   Text="Kategorie auswählen"
                   IsVisible="{Binding !HasAudioBooks}"
                   FontSize="25"
                   Margin="0,0,0,10" />
        <ScrollViewer Grid.Row="3"
                      VerticalScrollBarVisibility="Hidden"
                      IsVisible="{Binding !HasAudioBooks}">
            <ItemsControl Grid.Row="1" ItemsSource="{Binding AvailableGroups}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Theme="{StaticResource MaterialFlatButton}"
                                FontSize="20"
                                HorizontalContentAlignment="Left"
                                Margin="35,0,35,0"
                                Command="{Binding $parent[ItemsControl].((vm:BrowserViewModel)DataContext).SelectAdditionalGroup }"
                                CommandParameter="{Binding .}">
                            <Grid ColumnDefinitions="Auto, *">
                                <avalonia:MaterialIcon Grid.Column="0" Kind="Folder" Margin="0,0,10,0" Width="20"
                                                       Height="20" VerticalAlignment="Top" />
                                <TextBlock Grid.Column="1" Text="{Binding .}" TextWrapping="Wrap" />
                            </Grid>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.Template>
                    <ControlTemplate>
                        <ItemsPresenter Margin="0,0,0,100" />
                    </ControlTemplate>
                </ItemsControl.Template>
            </ItemsControl>
        </ScrollViewer>


        
        <Grid Grid.Row="0" Grid.RowSpan="4" IsVisible="{Binding IsLoading}">
            <ProgressBar Classes="circular" IsIndeterminate="True" />
        </Grid>
        
        <controls:FloatingButton Grid.Row="3"  
                                 VerticalAlignment="Bottom" 
                                 HorizontalAlignment="Right" 
                                 Margin="20" 
                                 Command="{Binding LoadOnlineAudiobooks}">
            <avalonia:MaterialIcon Kind="Refresh" Width="30" Height="30"/>
        </controls:FloatingButton>
            
        </Grid>
</UserControl>